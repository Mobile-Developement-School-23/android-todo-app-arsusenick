<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Authorisation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/labPrimary</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/backPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/backElevated</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/supOverlay</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:windowBackground">@color/backSecondary</item> <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/labTertiary</item> <item name="android:textColorPrimary">@color/labPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
    </style>
    <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog"> <item name="android:textColor">@color/blue</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/labPrimary</item>
    </style>

    <style name="Body" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/labPrimary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/blue</item>
        <!-- Used for the title and text -->
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
        <!-- Used for the background -->=
        <item name="shapeAppearanceOverlay">@style/MaterialAlertDialogCorners</item>
    </style>

    <style name="MaterialAlertDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>